<Application
    x:Class="KozmoTech.ZenUtility.ChecksumHasher.UI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Page Styles -->
            <Thickness x:Key="PageTitleCommandBarMargin">40,0,38,0</Thickness>
            <Thickness x:Key="PageContentPadding">44,4,44,48</Thickness>

            <!-- WinUI Overrides -->
            <Thickness x:Key="NavigationViewHeaderMargin">0,32,0,8</Thickness>

            <!-- App Defined Styles -->
            <Style TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
                <Setter Property="MinWidth" Value="120" />
            </Style>
            <Style TargetType="ComboBox" BasedOn="{StaticResource DefaultComboBoxStyle}">
                <Setter Property="MinWidth" Value="130" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>

</Application>
